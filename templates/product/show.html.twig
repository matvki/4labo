{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
    <h1>Product Details</h1>

    <table>
        <tr>
            <th>Title</th>
            <td>{{ product.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ product.category.name }}</td>
        </tr>
    </table>

    <a href="{{ path('product_edit', {'product': product.id}) }}">Edit product<a>
    <a href="{{ path('product_delete', {'product': product.id}) }}" onclick="return confirm('Are you sure you want to delete this item ?');">Delete product</a>
{% endblock %}
