{% extends 'base.html.twig' %}

{% block body %}
<div>
    <h1>Login</h1>
    <form action="{{ path('app_login') }}" method="post">
        <div>
            <label for="mail" class="form-label">Mail:</label>
            <input type="text" id="mail" name="_username" value="{{ last_mail }}" class="form-control" required autofocus>
        </div>
        <div>
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="_password" name="_password" class="form-control" required>
        </div>
        <div class="d-flex justify-content-between align-items-center  mt-3">
            <button id="sub_mite" class="btn btn-primary" type="submit">Login</button>
            <a href="{{ path('app_register') }}" class="btn btn-outline-secondary">Register</a>
        </div>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>
</div>

{% endblock %}
