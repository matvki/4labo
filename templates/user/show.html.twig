{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <h1>User Details</h1>

    <table>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.mail }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ user.phone }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ user.address }}</td>
        </tr>
    </table>

    <a href="{{ path('user_edit', {'user': user.id}) }}">Edit user<a>
    <a href="{{ path('user_delete', {'user': user.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');">Delete user</a>
{% endblock %}
